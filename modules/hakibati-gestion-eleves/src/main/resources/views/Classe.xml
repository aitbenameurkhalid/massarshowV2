<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">


    <grid name="Classe-grid" title="Classes" model="com.hakibati.gestion.eleves.db.Classe">
        <field name="name"/>
        <field name="niveau"/>
        <field name="niveau.code"/>
        <field name="anneeScolaire"/>
    </grid>

    <form name="Classe-form" title="Classe" model="com.hakibati.gestion.eleves.db.Classe">
        <panel title="Ajouter ou modifier" showTitle="false">
            <field name="name"/>
            <field name="niveau"/>
            <field name="anneeScolaire"/>
        </panel>
        <panel-related field="affectationEnseignant" colSpan="12"/>
    </form>

</object-views>
